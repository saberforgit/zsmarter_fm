<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/rl_fuather">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rl_bg"
        android:layout_height="wrap_content"
        android:background="@color/pwd_bg"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="70%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/signature_pad_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                app:layout_heightPercent="15%">

                <!--<ImageButton-->
                    <!--android:id="@+id/btn_num_back"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:src="@drawable/back" />-->

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/password"
                    android:text="输入密码"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="normal|bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_input"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/rl_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rl_input"
                app:layout_heightPercent="15%"
                app:layout_widthPercent="70%">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/password_1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rl_input_item">

                    <ImageView
                        android:id="@+id/password_2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rl_input_item">

                    <ImageView
                        android:id="@+id/password_3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rl_input_item">

                    <ImageView
                        android:id="@+id/password_4"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rl_input_item">

                    <ImageView
                        android:id="@+id/password_5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/password_6"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/password" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_input"
                app:layout_heightPercent="70%">

                <TableLayout
                    android:id="@+id/table1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_num_01"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="1"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_02"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="2"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_03"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="3"
                            android:textSize="28dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_num_04"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="4"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_05"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="5"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_06"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="6"
                            android:textSize="28dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_num_07"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="7"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_08"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="8"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_09"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="9"
                            android:textSize="28dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_back"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:src="@drawable/back"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textSize="28dp" />

                        <Button
                            android:id="@+id/btn_num_00"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/password"
                            android:text="0"
                            android:textSize="28dp" />

                        <ImageButton
                            android:id="@+id/btn_num_del"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="15dp"
                            android:src="@drawable/del"
                            android:textSize="28dp" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>